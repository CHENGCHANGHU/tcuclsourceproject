<com.example.helloworld.CustomToolBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    app:left_tv_visible="true"
    app:left_tv_text="返回"
    app:right_btn_visible="true"
    app:right_tv_visible="true"
    app:right_tv_text="菜单"
    app:title_visible="true"
    app:title_text="销售人员信息完善"
    tools:context="com.example.helloworld.producer.ProducerActivity">

    <EditText
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:text="姓名"

        android:layout_marginTop="30dip"
        android:background="#FFFFCC"/>
    <EditText

        android:layout_marginTop="15dip"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:text="工作单位"
        android:background="#FFFFCC"/>
    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">
        <EditText
            android:background="#FFFFCC"


            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="身份证号"/>

    </LinearLayout>

    <EditText
        android:background="#FFFFCC"

        android:layout_marginTop="15dp"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:text="联系方式"/>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">
        <EditText
            android:background="#FFFFCC"


            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="销售工作证件号"/>
        <Button
            android:id="@+id/photo_seller_1"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:background="@drawable/button_select" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSellerSave"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:text="提交"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/shape"
        android:layout_marginTop="18dip"
        android:layout_gravity="center"/>
</com.example.helloworld.CustomToolBar>