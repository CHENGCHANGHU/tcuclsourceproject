<com.example.helloworld.CustomToolBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    app:left_tv_visible="true"
    app:left_tv_text="返回"
    app:right_btn_visible="true"
    app:right_tv_visible="true"
    app:right_tv_text="菜单"
    app:title_visible="true"
    app:title_text="检疫人员信息修改"
    tools:context="com.example.helloworld.producer.ProducerActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="160dp"
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="姓名" />

                <EditText
                    android:id="@+id/quarantiner_name"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:text="科比·布莱恩特"
                    android:textAlignment="center" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FF4081" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="160dp"
                    android:background="#FFFFFF"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="系统人员编号" />

                <EditText
                    android:id="@+id/quarantiner_id"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="0881"
                    android:textAlignment="center"

                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FF4081" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="160dp"
                    android:background="#FFFFFF"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="身份证号" />

                <EditText
                    android:id="@+id/quarantiner_idno"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="345679198423456910"
                    android:textAlignment="center"


                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FF4081" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="160dp"
                    android:background="#FFFFFF"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="注册时间" />

                <EditText
                    android:id="@+id/quarantiner_intime"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="2013.12.6"
                    android:textAlignment="center"


                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FF4081" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="160dp"
                    android:background="#FFFFFF"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="联系方式" />

                <EditText
                    android:id="@+id/quarantiner_contact"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="13477771022"

                    android:textAlignment="center"
                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FF4081" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="160dp"
                    android:background="#FFFFFF"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="工作单位" />

                <EditText
                    android:id="@+id/quarantiner_workplace"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="江苏省南京市检疫一局"
                    android:textAlignment="center"

                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FF4081" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="200dp"
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="重新上传工作证" />

                <Button
                    android:id="@+id/photo_checker_1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_select" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FF4081" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="160dp"
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="签约兽医资格证编号" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="235568786666001"
                    android:textAlignment="center"

                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FF4081" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="200dp"
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="重新上传签约兽医资格证" />

                <Button
                    android:id="@+id/photo_checker_2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_select" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FF4081" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="160dp"
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="执业兽医资格证编号" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="2355687862230001"
                    android:textAlignment="center"

                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FF4081" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="200dp"
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="重新上传执业兽医资格证" />

                <Button
                    android:id="@+id/photo_checker_3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_select" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FF4081" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="160dp"
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="账号" />

                <EditText
                    android:id="@+id/quarantiner_count"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="13456891022"

                    android:textAlignment="center"
                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FF4081" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="160dp"
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="当前密码" />

                <EditText
                    android:id="@+id/quarantiner_curpassword"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="123456"

                    android:textAlignment="center"
                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FF4081" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="160dp"
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="新密码" />

                <EditText
                    android:id="@+id/quarantiner_newpassword"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:hint="请输入新密码"

                    android:textAlignment="center"
                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FF4081" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="160dp"
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="确认密码" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text=""

                    android:textAlignment="center"
                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FF4081" />

            <Button
                android:id="@+id/checkerchange_submit"
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dip"
                android:layout_marginBottom="6dip"
                android:background="@drawable/shape"

                android:text="提交"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>
</com.example.helloworld.CustomToolBar>